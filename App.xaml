<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:book"
             xmlns:converters="clr-namespace:book.Converters"
             x:Class="book.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:AuthorsConverter x:Key="AuthorsConverter" />
            <converters:TitleTruncateConverter x:Key="TitleTruncateConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:IsNullOrEmptyConverter x:Key="IsNullOrEmptyConverter" />
            <converters:IsGreaterThanZeroConverter x:Key="IsGreaterThanZeroConverter" />
            <converters:IsZeroOrLessConverter x:Key="IsZeroOrLessConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
