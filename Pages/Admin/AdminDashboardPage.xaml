<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="book.Pages.Admin.AdminDashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Bảng điều khiển Admin">
    <Grid RowDefinitions="Auto,*">
        <Frame Grid.Row="0" 
               Padding="15" 
               BackgroundColor="#FF2196F3"
               HasShadow="True"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Label Text="Bảng điều khiển Admin" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1" 
                        Text="Đăng xuất" 
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#FF1976D2"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="15,8"/>
            </Grid>
        </Frame>

        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding MenuItems}" Margin="15,20">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="20" 
                               BackgroundColor="White"
                               BorderColor="#FFE0E0E0"
                               CornerRadius="15"
                               HasShadow="True"
                               Margin="0">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Command}"/>
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Label Text="{Binding Icon}" 
                                       FontSize="40" 
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding Title}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#FF424242"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>

